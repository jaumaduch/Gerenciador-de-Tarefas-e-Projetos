@model MyTasks.Models.TaskModel

@{
    ViewBag.Title = "Adicionar Tarefa";
}

<h2 class="text-primary">Adicionar Tarefa</h2>
<hr />
@using (Html.BeginForm()) 
{
    <div class="form-horizontal">
        @Html.HiddenFor( model => model.ProjectId)
        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Title, new { required = "required" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DueDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DueDate)
                @Html.ValidationMessageFor(model => model.DueDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Importance, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.RadioButton("Importance","b", false) Baixa
                @Html.RadioButton("Importance", "n", true) Normal
                @Html.RadioButton("Importance", "u", false) Urgente
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.RadioButton("Status", "i", true) A iniciar
                @Html.RadioButton("Status", "a", false) Em andamento
                @Html.RadioButton("Status", "c", false) Concluída
            </div>
        </div>
    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar Tarefa" class="btn btn-primary" />
                @Html.ActionLink("Cancelar", "Home", "User", null, new { @class = "btn-primary btn" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10  text-danger">
                  @TempData["message"]
            </div>
        </div>
    </div>
}


@section Scripts {
    <script src="~/Scripts/jquery-ui-1.11.4.js"></script>
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <script>
        $(function () {
            $("#DueDate").datepicker({ dateFormat: "dd/mm/yy" });
        }
     );
    </script>
}
